<idea-plugin>

    <id>pl.stepwise</id>
    <name>Protostuff Kotlin Tag Generator</name>

    <change-notes>Initial release of the protostuff Kotlin Tag Generator plugin.</change-notes>
    <version>0.1-SNAPSHOT</version>
    <vendor url="https://www.stepwise.pl" email="contact@stepwise.pl">Stepwise.</vendor>

    <description>Generate protostuff tag annotations in Kotlin classes</description>

    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <intentionAction>
            <className>pl.stepwise.protostuff.ProtostuffTagGenerator</className>
            <category>Protobuff</category>
        </intentionAction>
    </extensions>

    <project-components>
        <component>
            <implementation-class>pl.stepwise.protostuff.ProtostuffTagGenerator</implementation-class>
        </component>
    </project-components>

</idea-plugin>